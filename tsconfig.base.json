{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    "experimentalDecorators": true,
    "moduleResolution": "bundler",
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ES2022", "dom", "esnext.asynciterable"],
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@lib/barchart": ["libs/barchart/src/index.ts"],
      "@lib/core": ["libs/core/src/index.ts"],
      "@lib/features/auth": ["libs/features/auth/src/index.ts"],
      "@lib/features/auth-callback": [ "libs/features/auth-callback/src/index.ts"],
      "@lib/features/home": ["libs/features/home/src/index.ts"],
      "@lib/features/reporitories": ["libs/features/reporitories/src/index.ts"],
      "@lib/features/reports": ["libs/features/reports/src/index.ts"],
      "@lib/features/repository-list": ["features/repository-list/src/index.ts"],
      "@lib/shared/data-store": ["libs/shared/data-store/src/index.ts"],
      "@lib/shared/layout": ["libs/shared/layout/src/index.ts"],
      "@lib/shared/types": ["libs/shared/types/src/index.ts"],
      "@lib/shared/config": ["libs/shared/config/src/index.ts"]
    },
    "baseUrl": ".",
    "rootDir": "."
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  },
  "exclude": ["node_modules", "tmp"]
}
